Task 2
///////////////////////////////////////////////////////////////////
using System;

class Program
{

    public class Ship
    {
       public string Name;

        public Ship(string name)
        {
            Name = name;
        }
    }

    public class PirateShipA : Ship
    {
        public int StolenCargo;

        public PirateShipA(string name, int cargo) : base(name)
        {
            StolenCargo = cargo;

        }
    }

    public class PirateShipB : Ship
    {
        public bool HasFakeIdentification;

        public PirateShipB(string name, bool fakeId) : base(name)
        {
            HasFakeIdentification = fakeId;
        }
    }
    static void Main()
    {
        var rand = new Random();
        // creating the list of ships
        Ship[] pirateShips = new Ship[100];

        // Filling up the list with pirateships
        for(int i= 0; i < pirateShips.Length; i++)
        {
            if(rand.Next(0, 2) == 1)
            {
                pirateShips[i] = new PirateShipA($"Pirateship #{i}", rand.Next(1, 100));
            }
            else
            {
                int hasFakeID = rand.Next(0, 2);
                pirateShips[i] = new PirateShipB($"Pirateship #{i}", hasFakeID == 0 ? false : true);
            }
        }

        // displaying the pirateships
        for (int i = 0; i < pirateShips.Length; i++)
        {
            if (pirateShips[i] is PirateShipA ShipA)
            {
                Console.WriteLine($"{ShipA.Name} has {ShipA.StolenCargo} amount of stolen cargo on board.");
            }
            else if (pirateShips[i] is PirateShipB ShipB)
            {
                string message = ShipB.HasFakeIdentification ? "has fake identification system" : "doesn't has fake identification system";
                Console.WriteLine($"{ShipB.Name} {message}.");
            }
        }

    }
}
