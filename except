Medium

Task 3
/////////////////////////////////////////////////////////////////////
using System;

class Program
{
    static void Main()
    {
        string[] resources = new string[] { "food", "water", "firstaid" };

        int index = 3;

        try
        {
            CheckResourceIndex(resources, index);
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            Console.WriteLine("Resource checked");
        }


        Console.ReadKey();
    }

    static void CheckResourceIndex(string[] resources, int index)
    {
        if (index >= resources.Length)
        {
            throw new Exception("Resource index not in the list");
        }
    }

}
/////////////////////////////////////////////////////////////////////

Task 4
/////////////////////////////////////////////////////////////////////
using System;

class Program
{
    static void Main()
    {
        int distance = 60000;
        int speed = 0;
        int traveltime;

        try
        {
            if (speed == 0)
            {
                throw new Exception("Cannot calculate traveltime with zero speed");
            }
            else
            {
                traveltime = distance / speed;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            Console.WriteLine("Program finished");
        }


        Console.ReadKey();
    }

}
