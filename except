Hard

Task 5
/////////////////////////////////////////////////////////////////////
using System;

class Program
{
    static void Main()
    {

        string[] resources = new string[] { "food", "water", "firstaid" };

        int index = 3;

        try
        {
            CheckIndex(resources, index);
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            Console.WriteLine("Resource checked");
        }


        Console.ReadKey();
    }

    static void CheckIndex(string[] resource, int index)
    {
        if (index >= resource.Length)
        {
            throw new CompartmentNumberException("Compartment does not exist");
        }
    }

}

public class CompartmentNumberException : Exception
{
    public CompartmentNumberException(string message) : base(message)
    {

    }
}
