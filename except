Easy

Task 1
/////////////////////////////////////////////////////////////////////
using System;

class Program
{
    static void Main()
    {
        string[] resources = new string[] { "food packets", "water bottles", "first-aid kit" };

        HandleIndexError(resources, 3);

        Console.ReadKey();
    }

    static void HandleIndexError(string[] list, int index)
    {
        try
        {
            Console.WriteLine($"Selected resource: {list[index]}");
        }
        catch(IndexOutOfRangeException ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
}
/////////////////////////////////////////////////////////////////////

Task 2
/////////////////////////////////////////////////////////////////////
using System;

class Program
{
    static void Main()
    {

        int distance = 1000;
        int speed = 0;

        int time = CalculateTravelTime(distance, speed);

        Console.ReadKey();
    }

    static int CalculateTravelTime(int distance, int speed)
    {
        try
        {
            return distance / speed;
        }
        catch(DivideByZeroException)
        {
            Console.WriteLine("Speed is zero, can not calculate travel time");
            return 0;
        }
    }
}
