using System;
using System.Xml.Linq;

class Program
{

    class Dice
    {
        public static int NumberFellOut()
        {
            var random = new Random();

            return random.Next(1, 7);
        }
    }

    class Cup
    {
        int NumberOfDice;

        public Cup(int numberOfDice)
        {
            NumberOfDice = numberOfDice;
        }

        public int ShakeGlass()
        {
            int sumOfPoints = 0;

            for (int i = 0; i < NumberOfDice; i++)
            {
                sumOfPoints += Dice.NumberFellOut();
            }

            return sumOfPoints;

        }
    }

    class DicePlayer
    {
        List<int> RollQue;
        string Name;
        int NumberOfDice;
        Cup GlassWithDice;

        public DicePlayer(string name, int numberOfDice)
        {
            RollQue = new List<int>();
            Name = name;
            NumberOfDice = numberOfDice;
            GlassWithDice = new Cup(numberOfDice);
        }

        public void ShakeGlass(int times)
        {
            for (int i = 0; i < times; i++)
            {
                int currentRoll = GlassWithDice.ShakeGlass();
                RollQue.Add(currentRoll);
                Console.WriteLine($"{Name} rolled: {currentRoll}");
            }
        }

    }

    class ComputerPlayer : DicePlayer
    {
        Random random = new Random();
        public ComputerPlayer(string name, int numberOfDice) : base(name, numberOfDice) { }

        public void ShakeGlass()
        {
            int numberOfShake = random.Next(1, 6);
            Console.WriteLine($"The comupter will shake the glass {numberOfShake} times");
            base.ShakeGlass(numberOfShake);
        }

    }

    static void Main()
    {

        DicePlayer player1 = new DicePlayer("Vasquez", 3);
        ComputerPlayer player2 = new ComputerPlayer("Computer", 3);

        Console.WriteLine("Player 1's rolls:");
        player1.ShakeGlass(3);
        Console.WriteLine("\nComputer's rolls:");
        player2.ShakeGlass();

        Console.ReadKey();
    }
}
