Task 1
////////////////////////////////////////////////////////////////
using System;

class Program
{
    static void Main(string[] args)
    {

        if (args.Length == 0)
        {
            Console.WriteLine("No planet entered");
            return;
        }

        Console.WriteLine($"Heading to planet {args[0]}");

        Console.ReadKey();
    }

}
