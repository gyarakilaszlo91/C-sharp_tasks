Task 2
////////////////////////////////////////////////////////////////
using System;

class Program
{
    static void Main(string[] args)
    {

        int startingYear = 2024;

        if(args.Length == 0)
        {
            Console.WriteLine("No time entered.");
            return;
        }

        try
        {
            int travelTime = int.Parse(args[0]);
            Console.WriteLine($"Excepted arrival in year {startingYear + travelTime}");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            Console.WriteLine("Program exits.");
        }

        Console.ReadKey();
    }

}
