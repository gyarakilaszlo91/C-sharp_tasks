Task 4
/////////////////////////////////////////////////////////////////////////////////////////////////////////////
using System;


class Captain
{
    public readonly string Name;
    private Navigator _navigator;

    public Captain(string name, Navigator navigator)
    {
        Name = name;
        _navigator = navigator;
    }

    public void GiveOrder()
    {
        Coordinates coordinates = new Coordinates();

        Console.WriteLine($"Captain: Move to coordinates ({coordinates.ToString()})");
        _navigator.CheckMovement(coordinates);
    }
}

class Navigator
{
    Random random = new Random();
    private NavigationTable _navigationTable;
    private SeniorEngineer _seniorEngineer;
    private FuelTank _fuelTank;
    private Engine _engine;

    public Navigator(NavigationTable navigationTable, SeniorEngineer seniorEngineer, Engine engine, FuelTank fuelTank)
    {
        _navigationTable = navigationTable;
        _seniorEngineer = seniorEngineer;
        _engine = engine;
        _fuelTank = fuelTank;
    }
    private bool _canMove(Coordinates coordinates)
    {
        return random.Next(0, 2) == 0 ? true : false;
    }

    public void CheckMovement(Coordinates coordinates)
    {
        string currentCoordinates = _navigationTable.GetCurrentCoordinates();
        int requiredRotation = _navigationTable.GetRequiredRotation(coordinates);

        string canMove = _canMove(coordinates) == true ? "possible" : "not possible";

        Console.WriteLine($"Navigator: Current position is ({_navigationTable.GetCurrentCoordinates()})");
        Console.WriteLine($"Navigator: Required rotation angle: {requiredRotation} degrees");
        Console.WriteLine($"Navigator: Movement to ({coordinates.ToString()}) is {canMove}");

        if (canMove == "possible") _seniorEngineer.IsSystemReady(_engine, _fuelTank);
        
    }

}

class Coordinates
{
    Random random = new Random();
    private int _x;
    private int _y;
    private int _z;

    public Coordinates()
    {
        _x = random.Next(-50, 51);
        _y = random.Next(-50, 51);
        _z = random.Next(-50, 50);
    }

    public string ToString()
    {
        return $"{_x}, {_y}, {_z}";
    }

}

class NavigationTable
{
    Random random = new Random();
    private string _currentCoordinates;
    private int _currentDirection;

    public NavigationTable()
    {
        string coord = "";

        for (int i = 0; i < 3; i++)
        {
            if (i == 2)
            {
                coord += random.Next(-50, 51);
            }
            else
            {
                coord += random.Next(-50, 51) + ", ";
            }
        }

        _currentCoordinates = coord;
    }
    public string GetCurrentCoordinates()
    {
        return _currentCoordinates;
    }

    public int GetRequiredRotation(Coordinates target)
    {
        _currentDirection = random.Next(1, 361);
        return _currentDirection;
    }

}

class Engine
{
    Random random = new Random();
    private int _currentDurability;
    private int _durabilityCostPerJump;

    public Engine()
    {
        _currentDurability = random.Next(1, 101);
        _durabilityCostPerJump = random.Next(20, 41);
    }

    public bool CanJump()
    {
        return _currentDurability > _durabilityCostPerJump;
    }
}

class FuelTank
{
    Random random = new Random();
    private int _maxFuelCapacity;
    private int _currentFuel;
    private int _fuelConsumptionPerJump;

    public FuelTank()
    {
        _maxFuelCapacity = 100;
        _currentFuel = random.Next(0, 101);
        _fuelConsumptionPerJump = random.Next(20, 81);
    }

    public bool CanJump()
    {
        return _currentFuel > _fuelConsumptionPerJump;
    }

    public void Refuel(int amount)
    {
        if ( amount > 0) _currentFuel += amount;
    }
}

class SeniorEngineer
{
    public readonly string Name;

    public SeniorEngineer()
    {
        Name = "Mikhelson";

    }

    private bool _checkFuel(FuelTank fuelTank)
    {
        return fuelTank.CanJump();
    }

    private bool _checkEngines(Engine engine)
    {
        return engine.CanJump();
    }

    public void IsSystemReady(Engine engine, FuelTank fuelTank)
    {
        if(_checkFuel(fuelTank))
        {
            Console.WriteLine("Senior Engineer: Fuel check passed.");
            if (_checkEngines(engine))
            {
                Console.WriteLine("Senior Engineer: Engine check passed.");
                Console.WriteLine("Senior Engineer: Movement is possible!");
            }
            else
            {
                Console.WriteLine("Senio Engineer: Engine Durability too low for jump");
                Console.WriteLine("Senior Engineer: Movement is NOT possible.");
            }
        }
        else
        {
            Console.WriteLine("Senior Engineer: Insufficient fuel for jump.");
            Console.WriteLine("Senior Engineer: Movement is NOT possible.");
        }
    }
}
class Program
{

    static void Main()
    {
        NavigationTable navigationTable = new NavigationTable();
        Engine engine = new Engine();
        FuelTank fuelTank = new FuelTank();
        SeniorEngineer engineer = new SeniorEngineer();
        Navigator navigator = new Navigator(navigationTable, engineer, engine, fuelTank);
        Captain captain = new Captain("Captain", navigator);

        captain.GiveOrder();
        

        Console.ReadKey();
    }
}
