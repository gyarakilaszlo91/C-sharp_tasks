Easy Task 2
////////////////////////////////////////////////////////////////////////////////////////
using System;

class Program
{
    static void Main()
    {
        List<string> planets_first = new List<string> { "Mercury", "Venus", "Mars", "Jupiter", "Saturn", "Uranus", "Neptune", "Pluto" };
        List<string> planets_second = new List<string> { "Mercury", "Venus", "Mars", "Jupiter", "Saturn", "Uranus", "Neptune", "Pluto" };

        planets_first.Remove("Pluto");

        planets_second.RemoveAt(planets_second.IndexOf("Pluto"));

        foreach (string planet in planets_first)
        {
            Console.Write($"{planet} ");
        }
        Console.WriteLine();

        foreach ( string planet in planets_second)
        {
            Console.Write($"{planet} ");
        }

        Console.ReadKey();
    }
}
////////////////////////////////////////////////////////////////////////////////////////

Medium Task 3
////////////////////////////////////////////////////////////////////////////////////////
using System;

class Program
{
    static void Main()
    {

        List<string> ships = new List<string> { "Enterprise", "Kyushu", "Phoenix", "Pasteur" };

        Console.WriteLine($"Ship names before inspection: ");
        foreach (string name in ships)
        {
            Console.Write($"{name} ");
        }

        Console.WriteLine();

        if (ships[1] == "Kyushu")
        {
            ships[1] = "Stargazer";
        }

        Console.WriteLine($"Ship names after inspection: ");
        foreach (string name in ships)
        {
            Console.Write($"{name} ");
        }

        Console.ReadKey();
    }
}
////////////////////////////////////////////////////////////////////////////////////////

Medium Task 4
////////////////////////////////////////////////////////////////////////////////////////
using System;

class Program
{
    static void Main()
    {
        List<string> ships = new List<string>();

        int emptyPlaces = 5;

        while (emptyPlaces > 0)
        {

            if (ships.Count > 0)
            {
                Console.Write($"Currently parking ships: ");
                foreach (string name in ships)
                {
                    Console.Write($"{name} ");
                }
                Console.WriteLine();
            }

            Console.Write("Parking ship name: ");
            ships.Add(Console.ReadLine());

            emptyPlaces--;

            if (emptyPlaces > 0)
            {
                Console.WriteLine($"Empty places left: {emptyPlaces}\n");
            }

        }

        Console.WriteLine("\nThe station can no longer accept ships");

        Console.ReadKey();
    }
}
