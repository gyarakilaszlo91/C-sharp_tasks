Unit 14 Lists

Easy Task 1
////////////////////////////////////////////////////////////////////////////////////////
using System;

class Program
{
    static void Main()
    {

        List<string> planets = new List<string> { "Mercury", "Venus", "Mars", "Jupiter", "Saturn", "Uranus", "Neptune" };

        int indexOfMars = planets.IndexOf("Mars");


        planets.Insert(indexOfMars, "Earth");

        foreach (string planet in planets)
        {
            Console.WriteLine($"{planet} ");
        }


        Console.ReadKey();
    }
}
