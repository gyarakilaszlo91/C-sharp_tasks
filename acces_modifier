class NavigationTable
{
    private readonly List<(string, string)> AccesLog = new List<(string, string)>();

    public void Move(string name, string accesLevel)
    {
        if (CheckAcces(name, accesLevel))
        {
            Console.WriteLine($"{name} navigates the ship");
        }
        else
        {
            Console.WriteLine("Acces Denied: Only  the captain can acces the navigation table.");
        }
    }

    private bool CheckAcces(string name, string accesLevel)
    {

        if (name == "Mikhelson")
        {
            if (SeniorEngineerMikhelson.AskBypass())
            {
                return true;
            }
        }

        if(accesLevel == "captain")
        {
            AccesLog.Add((name, "succes"));
            return true;
        }
        else
        {
            AccesLog.Add((name, "failure"));
            return false;
        }
    }

    public void CheckLog(string acceslevel)
    {
        if (acceslevel == "captain")
        {
            foreach((string, string) log in AccesLog)
            {
                Console.WriteLine($"{log.Item1} tried to acces the navigation with {log.Item2}");
            }
        }
    }
}

class ChiefEngineer : Engineer
{
    public ChiefEngineer(string name, int age, string departement, string clearenceLevel = "chief engineer") : base( name,  age,  departement,  clearenceLevel)
    {

    }
}

class SeniorEngineerMikhelson : Engineer
{
    public SeniorEngineerMikhelson(string name, int age, string departement, string clearenceLevel = "engineer") : base(name, age, departement, clearenceLevel)
    {

    }

    public static bool AskBypass()
    {
        Console.Write("Senior Engineer Mikhelson, is the situation critical? Do you want to ignore the restrictions?");
        string answer = Console.ReadLine().Trim().ToLower();
        if(answer == "yes" || answer == "y")
        {
            return true;
        }
        else
        {
            return false;
        }
    }

}

class Captain
{
    public readonly string Name;
    private int Age;
    private string ClearenceLevel;

    public Captain(string name, int age, string clearenceLevel = "captain")
    {
        Name = name;
        Age = age;
        ClearenceLevel = clearenceLevel;
    }

    public int GetAge()
    {
        return Age;
    }
    public void SetAge(int age)
    {
        Age = age;
    }
    public string GetClearenceLevel()
    {
        return ClearenceLevel;
    }
}
class Program
{


    static void Main()
    {
        List<Door> doors = new List<Door>() { new Door(), new Door(), new Door(), new Door(), new Door()};
        NavigationTable navigation = new NavigationTable();

        FutureCadet cadet = new FutureCadet("John", clearence: "Cadet");
        Engineer engineer = new Engineer("Mike", 35, "Maintenance");
        ChiefEngineer chiefEngineer = new ChiefEngineer("Bob", 25, "Navigation");
        Captain captain = new Captain("Han", 34);

        SeniorEngineerMikhelson mikhelson = new SeniorEngineerMikhelson("Mikhelson", 65, "Engineer");

        GoTroughDoor(doors, cadet);
        GoTroughDoor(doors, engineer);
        GoTroughDoor(doors, chiefEngineer);
        GoTroughDoor(doors, captain);
        Console.WriteLine();
        navigation.Move(cadet.FullName, cadet.GetAccesLevel());
        navigation.Move(engineer.GetName(), engineer.GetClearenceLevel());
        navigation.Move(chiefEngineer.GetName(), chiefEngineer.GetClearenceLevel());
        navigation.Move(captain.Name, captain.GetClearenceLevel());
        
        Console.WriteLine("\n");
        GoTroughDoor(doors, mikhelson);
        navigation.Move(mikhelson.GetName(), mikhelson.GetClearenceLevel());

        Console.ReadKey();
    }

    public static void GoTroughDoor(List<Door> doors, Cadet cadet)
    {
        foreach (Door door in doors)
        {
            door.Open(cadet.FullName, cadet.GetAccesLevel());
        }
    }
    public static void GoTroughDoor(List<Door> doors, Engineer engineer)
    {
        foreach (Door door in doors)
        {
            door.Open(engineer.GetName(), engineer.GetClearenceLevel());
        }
    }
    public static void GoTroughDoor(List<Door> doors, Captain captain)
    {
        foreach (Door door in doors)
        {
            door.Open(captain.Name, captain.GetClearenceLevel());
        }
    }

}
