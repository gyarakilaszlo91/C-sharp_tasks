    {
        Name = name;
        Age = age;
        ClearenceLevel = clearenceLevel;
    }

    public int GetAge()
    {
        return Age;
    }
    public void SetAge(int age)
    {
        Age = age;
    }
    public string GetClearenceLevel()
    {
        return ClearenceLevel;
    }
}
class Program
{


    static void Main()
    {
        List<Door> doors = new List<Door>() { new Door(), new Door(), new Door(), new Door(), new Door()};
        NavigationTable navigation = new NavigationTable();

        FutureCadet cadet = new FutureCadet("John", clearence: "Cadet");
        Engineer engineer = new Engineer("Mike", 35, "Maintenance");
        ChiefEngineer chiefEngineer = new ChiefEngineer("Bob", 25, "Navigation");
        Captain captain = new Captain("Han", 34);


        GoTroughDoor(doors, cadet);
        GoTroughDoor(doors, engineer);
        GoTroughDoor(doors, chiefEngineer);
        GoTroughDoor(doors, captain);
        Console.WriteLine();
        navigation.Move(cadet.FullName, cadet.GetAccesLevel());
        navigation.Move(engineer.GetName(), engineer.GetClearenceLevel());
        navigation.Move(chiefEngineer.GetName(), chiefEngineer.GetClearenceLevel());
        navigation.Move(captain.Name, captain.GetClearenceLevel());

        Console.ReadKey();
    }

    public static void GoTroughDoor(List<Door> doors, Cadet cadet)
    {
        foreach (Door door in doors)
        {
            door.Open(cadet.FullName, cadet.GetAccesLevel());
        }
    }
    public static void GoTroughDoor(List<Door> doors, Engineer engineer)
    {
        foreach (Door door in doors)
        {
            door.Open(engineer.GetName(), engineer.GetClearenceLevel());
        }
    }
    public static void GoTroughDoor(List<Door> doors, Captain captain)
    {
        foreach (Door door in doors)
        {
            door.Open(captain.Name, captain.GetClearenceLevel());
        }
    }

}
